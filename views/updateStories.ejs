<%- include('_layouts/header'); -%>
    <link rel="stylesheet" href="/css/addProduct.css">
    <div class="responsive-nav" data-toggle="collapse" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
        <p class="breadcrumbs"><span class="mr-2"><a href="/KACoffe/v1/admin/stories">Quản lý
            <i class="ion-ios-arrow-forward"></i></a></span> <span>Cập nhật tin tức<i
      class="ion-ios-arrow-forward"></i></span></p>
    </div>

    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Cập nhật tin tức</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="/KACoffe/v1">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Thêm tin tức<i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="heading-section ftco-animate mb-5">

                <h2 class="mb-4">Cập nhật tin tức </h2>
            </div>
            <form method="POST">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Tiêu đề</label>
                        <input type="text" id="stories-name" name="title" value="<%= story.title %>">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Miêu tả ngắn</label>
                        <input type="text" id="short-des" name="description" value="<%= story.description %>">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Miêu tả chi tiết</label>
                        <textarea id="description" name="detaildescription"><%= story.detaildescription %></textarea>
                    </div>
                </div>


        </div>

        </div>

        <div class="buttons1" style="margin-left: 190px;">
            <button class="btn1" type="submit" id="add-btn1">Cập nhật</button>
        </div>
        </form>
        </div>
        </div>
    </section>

    <%- include('_layouts/footer'); -%>