<%- include('_layouts/header'); -%>
    <link rel="stylesheet" href="/css/addProduct.css">
    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Thêm sản phẩm</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Thêm sản phẩm <i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="heading-section ftco-animate mb-5">
                <span class="subheading">Cập nhật sản phẩm</span>
            </div>

            <!-- Form add products -->
            <form id="updatesubmit" action="/KACoffe/v1/admin/allproduct/<%= productid %>" method="POST">
                <div class="form">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="product-name" name="name" placeholder="Tên sản phẩm">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="short-des" name="description" placeholder="Miêu tả ngắn">
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea id="description" name="detaildescription" placeholder="Miêu tả chi tiết"></textarea>
                        </div>
                    </div>

                    <!-- product image -->


                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="product-price">
                                <input type="number" id="actual-price" name="realprice" placeholder="Giá gốc (VNĐ)">
                            </div>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="price" id="price" max="actual-price" placeholder="Giá bán (VNĐ)">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input id="category" name="material" placeholder="Nguyên liệu"></input>
                        </div>
                    </div>
                    <div class="buttons1">
                        <input type="submit" onclick="event.preventDefault(); capnhat('<%= productid %>');" value="Cập nhật sản phẩm" />
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script>
        async function capnhat(productid) {
            const updatesubmit = document.getElementById("updatesubmit")

            await Swal.fire({
                title: 'Do you want to save the changes?',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'Save',
                denyButtonText: `Don't save`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    Swal.fire('Saved!', '', 'success')
                    updatesubmit.submit()
                }
            })


        }
    </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%- include('_layouts/footer') ; -%>