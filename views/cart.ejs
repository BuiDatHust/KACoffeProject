<%- include('_layouts/header') ; -%>

<div class="container">
    <div class="cart">
        <span class="subheading" style="font-size:28px;">Giỏ hàng</span>
        <table class="cart-table">
            <tr>
                <th width="60"><span class="cart-all">Tất cả</span></th>
                <th>Sản phẩm</th>
                <th width="120">Giá</th>
                <th width="100">Số lượng</th>
                <th width="120">Tổng cộng</th>
                <th width="80">Thao tác</th>
            </tr>
            <tr class="cart-item">
                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                <td class="cart-txt-left">
                    <img src="/images/white-coffee.jpg" alt="" class="cart-txt-left-img">
                    <a href="white-coffee.html" class="cart-name">Cà phê sữa đá</a></td>
                <td><span class="cart-price">32000</span></td>
                <td><span class="cart-reduce">-</span><span class="cart-num">1</span> <span class="cart-add">+</span> </td>
                <td><span class="cart-subtotal">32000</span></td>
                <td><span class="cart-del">Xóa</span></td>
            </tr>
            <tr class="cart-item">
                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                <td class="cart-txt-left">
                    <img src="/images/cold-brew-milk-coffe.jpg" alt="" class="cart-txt-left-img">
                    <a href="cold-brew-milk-coffe.html" class="cart-name">Cold Brew Sữa Tươi</a></td>
                <td><span class="cart-price">45000</span></td>
                <td><span class="cart-reduce">-</span><span class="cart-num">2</span> <span class="cart-add">+</span> </td>
                <td><span class="cart-subtotal">90000</span></td>
                <td><span class="cart-del">Xóa</span></td>
            </tr>
            <tr class="cart-item">
                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                <td class="cart-txt-left">
                    <img src="/images/cold-grinding-ice-coffe.jpg" alt="" class="cart-txt-left-img">
                    <a href="cold-grinding-ice-coffe.html" class="cart-name">Cà Phê Đá Xay - Lạnh</a></td>
                <td><span class="cart-price">59000</span></td>
                <td><span class="cart-reduce">-</span><span class="cart-num">1</span> <span class="cart-add">+</span> </td>
                <td><span class="cart-subtotal">59000</span></td>
                <td><span class="cart-del">Xóa</span></td>
            </tr>
            <tr class="cart-bottom">
                <td colspan="6">
                    <span class="cart-bottom-span">Mua <span class="cart-total-num">4</span> Sản phẩm</span>
                    <span class="cart-bottom-span">Tổng cộng: <span class="cart-total-price">181000</span></span>
                    <span class="cart-bottom-btn">Đặt hàng</span>
                </td>
            </tr>
        </table>
    </div>
</div>

<%- include('_layouts/footer') ; -%>