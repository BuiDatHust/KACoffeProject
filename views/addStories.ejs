<%- include('_layouts/header'); -%>
    <link rel="stylesheet" href="/css/addProduct.css">
    <div class="responsive-nav" data-toggle="collapse" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
        <p class="breadcrumbs"><span class="mr-2"><a href="/KACoffe/v1/admin/stories">Quản lý
            <i class="ion-ios-arrow-forward"></i></a></span> <span>Thêm tin tức<i
      class="ion-ios-arrow-forward"></i></span></p>
    </div>
    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Thêm tin tức</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="/KACoffe/v1">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Thêm tin tức<i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="heading-section ftco-animate mb-5">
                <span class="subheading">Thêm tin tức</span>
                <h2 class="mb-4">Tạo tin tức mới</h2>
            </div>
            <form action="/KACoffe/v1/admin/createStories" method="POST" enctype="multipart/form-data">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Tiêu đề</label>
                        <input type="text" id="stories-name" name="title" placeholder="">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Miêu tả ngắn</label>
                        <input type="text" id="short-des" name="description" placeholder="">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Miêu tả chi tiết</label>
                        <textarea id="description" name="detaildescription" placeholder=""></textarea>
                    </div>
                </div>

                <!-- stories image -->

                <div class="upload-image-sec">
                    <p class="text"><img src="/images/camera.png" alt="">Tải ảnh lên</p>
                    <div class="upload-catalouge">
                        <input type="file" class="fileupload" name="image" id="first-file-upload-btn" hidden>
                        <label for="first-file-upload-btn" class="upload-image"></label>
                    </div>
                </div>
        </div>

        </div>

        <div class="buttons1" style="margin-left: 190px;">
            <button class="btn1" id="add-btn1">Thêm tin tức</button>
        </div>
        </form>
        </div>
        </div>
    </section>

    <%- include('_layouts/footer'); -%>
        <script>
            var fileUpload = document.querySelector('.fileupload');
            var uploadImage = document.querySelector('.upload-image');

            fileUpload.addEventListener('change', function() {
                const file = this.files[0];
                file.preview = URL.createObjectURL(file)
                uploadImage.style.backgroundImage = 'url(' + file.preview + ')'
            })
        </script>