<%- include('../_layouts/header') ; -%>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Profile</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Quản lý cửa hàng <i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 my-5">
        <div class="container">
            <h1 class="mb-5">Quản lý cửa hàng</h1>
            <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                <div class="profile-tab-nav border-right">
                    <div class="p-4">
                        <div class="img-circle text-center mb-3">
                            <img src="/images/avt.jpg" alt="Image" class="shadow">
                        </div>
                        <h4 class="text-center">Admin</h4>
                    </div>
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link" id="products-tab" href="/KACoffe/v1/admin"> Sản phẩm
                        </a>
                        <a class="nav-link" id="discount-tab" href="/KACoffe/v1/admin/discount">
                            Mã giảm giá
                        </a>
                        <a class="nav-link active" id="user-tab" href="/KACoffe/v1/admin/user">
                            Người dùng
                        </a>
                        <a class="nav-link" id="order-tab" href="/KACoffe/v1/admin/order">
                            Đơn hàng
                        </a>
                        <a class="nav-link" id="stories-tab" href="/KACoffe/v1/admin/stories">
                            Tin tức
                        </a>
                        <a class="nav-link" id="statistic-tab" href="/KACoffe/v1/admin/statistic">
                            Thống kê
                        </a>
                    </div>
                </div>
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="security-tab">
                        <div class="grid__column-10">
                            <div class="cart-cart">
                                <span class="subheading" style="font-size:20px;">Người dùng vàng</span>
                                <table class="cart-table">
                                    <tr>
                                        <th style="width: 30px;"><span class="cart-all">Tất cả</span></th>
                                        <th class="admin-header__products">Tài khoản</th>
                                        <th class="admin-header__price">Số điện thoại</th>
                                        <th class="admin-header__price">Điểm số</th>
                                        <th class="admin-header__header">Thao tác</th>
                                    </tr>
                                    <% users.forEach(function(user){  %>
                                        <% if( user.rank=="vàng" ) { %>
                                            <tr class="cart-item">
                                                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                                                <td class="cart-txt-left">
                                                    <a href="" class="cart-name">
                                                        <%= user.name %>
                                                    </a>
                                                </td>
                                                <td><span class="cart-price"><%= user.phone %></span></td>
                                                <td>
                                                    <%= user.score %>
                                                </td>
                                                <td>
                                                    <% if(user.role != 'admin')  { %>
                                                        <form id="userSubmit<%= user._id %>" action="/KACoffe/v1/admin/updateUserAsAdmin/<%= user._id  %>" method="post">
                                                            <button onclick="event.preventDefault();UpdateRoleUser('<%= user._id %>');" id="sua" class="btn btn-warning">Thêm quyền Admin</button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% } ; %>
                                    <% }) ; %>
                                </table>
                            </div>
                            <div class="cart-cart" style="padding-top: 50px;">
                                <span class="subheading" style="font-size:20px;">Người dùng bạc</span>
                                <table class="cart-table">
                                    <tr>
                                        <th style="width:30px;"><span class="cart-all">Tất cả</span></th>
                                        <th class="admin-header__products">Tài khoản</th>
                                        <th class="admin-header__price">Số điện thoại</th>
                                        <th class="admin-header__price">Điểm số</th>
                                        <th class="admin-header__header">Thao tác</th>
                                    </tr>
                                    <% users.forEach(function(user){  %>
                                        <% if( user.rank=="bạc" ) { %>
                                            <tr class="cart-item">
                                                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                                                <td class="cart-txt-left">
                                                    <a href="" class="cart-name">
                                                        <%= user.name %>
                                                    </a>
                                                </td>
                                                <td><span class="cart-price"><%= user.phone %></span></td>
                                                <td>
                                                    <%= user.score %>
                                                </td>
                                                <td>
                                                    <% if(user.role != 'admin')  { %>
                                                        <form id="userSubmit<%= user._id %>" action="/KACoffe/v1/admin/updateUserAsAdmin/<%= user._id  %>" method="post">
                                                            <button onclick="event.preventDefault();UpdateRoleUser('<%= user._id %>');" id="sua" class="btn btn-warning">Thêm quyền Admin</button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% } ; %>
                                    <% }) ; %>
                                </table>
                            </div>
                            <div class="cart-cart" style="padding-top: 50px;">
                                <span class="subheading" style="font-size:20px;">Người dùng đồng</span>
                                <table class="cart-table">
                                    <tr>
                                        <th style="width: 30px;"><span class="cart-all">Tất cả</span></th>
                                        <th class="admin-header__products">Tài khoản</th>
                                        <th class="admin-header__price">Số điện thoại</th>
                                        <th class="admin-header__price">Điểm số</th>
                                        <th class="admin-header__header">Thao tác</th>
                                    </tr>
                                    <% users.forEach(function(user){  %>
                                        <% if( user.rank=="đồng" ) { %>
                                            <tr class="cart-item">
                                                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                                                <td class="cart-txt-left">
                                                    <a href="" class="cart-name">
                                                        <%= user.name %>
                                                    </a>
                                                </td>
                                                <td><span class="cart-price"><%= user.phone %></span></td>
                                                <td>
                                                    <%= user.score %>
                                                </td>
                                                <td>
                                                    <% if(user.role != 'admin')  { %>
                                                        <form id="userSubmit<%= user._id %>" action="/KACoffe/v1/admin/updateUserAsAdmin/<%= user._id  %>" method="post">
                                                            <button onclick="event.preventDefault();UpdateRoleUser('<%= user._id %>');" id="sua" class="btn btn-warning">Thêm quyền Admin</button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% } ; %>
                                    <% }) ; %>
                                </table>
                            </div>
    
                            <div class="cart-cart" style="padding-top: 50px;">
                                <span class="subheading" style="font-size:20px;">Người dùng hạng thường</span>
                                <table class="cart-table">
                                    <tr>
                                        <th style="width: 30px;"><span class="cart-all">Tất cả</span></th>
                                        <th class="admin-header__products">Tài khoản</th>
                                        <th class="admin-header__price">Số điện thoại</th>
                                        <th class="admin-header__price">Điểm số</th>
                                        <th class="admin-header__header">Thao tác</th>
                                    </tr>
                                    <% users.forEach(function(user){  %>
                                        <% if( user.rank=="no ranking" || user.rank=="thường") { %>
                                            <tr class="cart-item">
                                                <td><input type="checkbox" checked="checked" class="cart-check" /></td>
                                                <td class="cart-txt-left">
                                                    <a href="" class="cart-name">
                                                        <%= user.name %>
                                                    </a>
                                                </td>
                                                <td><span class="cart-price"><%= user.phone %></span></td>
                                                <td>
                                                    <%= user.score %>
                                                </td>
                                                <td>
                                                    <% if(user.role != 'admin')  { %>
                                                        <form id="userSubmit<%= user._id %>" action="/KACoffe/v1/admin/updateUserAsAdmin/<%= user._id  %>" method="post">
                                                            <button onclick="event.preventDefault();UpdateRoleUser('<%= user._id %>');" id="sua" class="btn btn-warning">Thêm quyền Admin</button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% } ; %>
                                    <% }) ; %>
                                </table>
                            </div>
    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include('../_layouts/footer') ; -%>

<script>
    async function UpdateRoleUser(userId) {
        const usersubmit = document.getElementById(`userSubmit${userId}`)
        await Swal.fire({
                title: 'Bạn có chắc cập nhật?',
                text: "Bạn không thể quay lại kết quả",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Có !'
            })
            .then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Thành công!',
                        'Cập nhật thành công',
                        'success'
                    )
                    usersubmit.submit()
                }
            })
        }
</script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>