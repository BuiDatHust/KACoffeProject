        <script>
            async function UpdateRoleUser(userId) {
                const usersubmit = document.getElementById(`userSubmit${userId}`)
                await Swal.fire({
                        title: 'Bạn có chắc cập nhật?',
                        text: "Bạn không thể quay lại kết quả",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Có !'
                    })
                    .then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire(
                                    'Thành công!',
                                    'Cập nhật thành công',
                                    'success'
                                )
                                .then(() => {
                                    usersubmit.submit()
                                })
                        }
                    })
            }
        </script>
