<%- include('../_layouts/header') ; -%>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Profile</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Quản lý cửa hàng <i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 my-5">
        <div class="container">
            <h1 class="mb-5">Quản lý cửa hàng</h1>
            <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                <div class="profile-tab-nav border-right">
                    <div class="p-4">
                        <div class="img-circle text-center mb-3">
                            <img src="/images/avt.jpg" alt="Image" class="shadow">
                        </div>
                        <h4 class="text-center">Admin</h4>
                    </div>
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link" id="products-tab" href="/KACoffe/v1/admin"> Sản phẩm
                        </a>
                        <a class="nav-link" id="discount-tab" href="/KACoffe/v1/admin/discount">
                            Mã giảm giá
                        </a>
                        <a class="nav-link" id="user-tab" href="/KACoffe/v1/admin/user">
                            Người dùng
                        </a>
                        <a class="nav-link" id="order-tab" href="/KACoffe/v1/admin/order">
                            Đơn hàng
                        </a>
                        <a class="nav-link" id="stories-tab" href="/KACoffe/v1/admin/stories">
                            Tin tức
                        </a>
                        <a class="nav-link active" id="statistic-tab" href="/KACoffe/v1/admin/statistic">
                            Thống kê
                        </a>
                    </div>
                </div>
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="statistic" role="tabpanel" aria-labelledby="statistic-tab">
                        <span class="subheading" style="font-size:30px;">Thống kê bán hàng</span> </br>
                        </br>
                        </br>
    
                        <div class="row-card" style="display: grid;grid-template-columns: 1fr 1fr 1fr;">
    
                            <div class="card text-white bg-primary mb-3" style="max-width: 15rem">
                                <div class="card-header">Tổng doanh thu</div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                    <%= statistic.avenue %> triệu đồng</h5>
                                    <% if (oldStatistic.oldAvenue <= statistic.avenue) { %>
                                        <p class="card-text">Tăng <%= statistic.avenue - oldStatistic.oldAvenue %> triệu</p>
                                    <% } else { %>
                                        <p class="card-text">Giảm <%= oldStatistic.oldAvenue - statistic.avenue %> triệu</p>
                                    <% } %>
                                </div>
                            </div>
    
                            <div class="card text-white bg-secondary mb-3" style="max-width: 15rem">
                                <div class="card-header">Khách hàng mới</div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= statistic.newcustomer %> khách</h5>
                                        <% if (oldStatistic.oldCustomer <= statistic.newcustomer) { %>
                                            <p class="card-text">Tăng <%= statistic.newcustomer - oldStatistic.oldCustomer %> khách</p>
                                        <% } else { %>
                                            <p class="card-text">Giảm <%= oldStatistic.oldCustomer - statistic.newcustomer %> khách</p>
                                        <% } %>
                                </div>
                            </div>
    
                            <div class="card text-white bg-success mb-3" style="max-width: 15rem">
                                <div class="card-header">Tổng đơn</div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= statistic.sumorder %> đơn</h5>
                                        <% if (oldStatistic.oldSumOrder <= statistic.sumorder) { %>
                                            <p class="card-text">Tăng <%= statistic.sumorder - oldStatistic.oldSumOrder %> đơn</p>
                                        <% } else { %>
                                            <p class="card-text">Giảm <%= oldStatistic.oldSumOrder - statistic.sumorder %> đơn</p>
                                        <% } %>
                                </div>
                            </div>
                        </div>
    
                        </br>
    
                        <figure class="highcharts-figure1">
                            <div id="container1"></div>
                            <p class="highcharts-description">
    
                            </p>
                        </figure>
                        </br>
                        <figure class="highcharts-figure2">
                            <div id="container2"></div>
                            <p class="highcharts-description">
                                <div class="rate">
                                    <%= rate %>
                                </div>
                            </p>
    
    
                    </div>
                </div>
                

            </div>
        </div>
    </section>
<%- include('../_layouts/footer') ; -%>

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>
<script src="/js/statistic.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        Thongke('<%= chart1.time %>', '<%= chart1.money %>', '<%= chart1.guess %>', '<%= chart2 %>');
    })
</script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>